---
import Layout from '../layouts/Layout.astro';
import ScoreInput from '../components/ScoreInput';
import ScoreBoard from '../components/ScoreBoard';
---

<Layout title="Hand and Foot Scorer">
  <main class="container mx-auto px-4 py-8">
    <h1 class="text-4xl font-bold text-center text-white mb-8">Hand and Foot Scorer</h1>
    
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
      <div class="space-y-6">
        <div class="bg-gray-800 p-6 rounded-lg">
          <ScoreInput client:load teamId={1} />
        </div>
      </div>
      
      <div class="space-y-6">
        <div class="bg-gray-800 p-6 rounded-lg">
          <ScoreInput client:load teamId={2} />
        </div>
      </div>

      <div class="lg:col-span-2">
        <div class="bg-gray-800 p-6 rounded-lg">
          <h2 class="text-2xl font-bold text-white mb-4">Scoreboard</h2>
          <ScoreBoard client:load />
        </div>
      </div>
    </div>
  </main>
</Layout>

<style>
  body {
    background-color: #1a1a1a;
  }
</style>